<h1>Listing reports</h1>

<table>
  <tr>
    <th>Report month</th>
    <th>Dealer code</th>
    <th>Brand</th>
    <th>Scenario</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.report_month %></td>
    <td><%= report.dealer_code %></td>
    <td><%= report.brand %></td>
    <td><%= report.scenario %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report,  :confirm => 'Are you sure?', :method => :delete, :class=>'delete_report' %></td>
  </tr>
<% end %>
</table>

